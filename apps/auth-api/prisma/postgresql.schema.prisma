generator client {
  provider = "prisma-client-js"

  // Working with multiple clients in a single monorepo without overlaps
  // References:
  // - Issue https://github.com/prisma/prisma/issues/7470
  // - Repository: https://github.com/ionut-gheorghe/nx-multi-prisma
  output = "../generated/prisma-client/postgresql"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @db.Timestamptz(6)
  email      String   @unique
}
