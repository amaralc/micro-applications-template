generator client {
  provider = "prisma-client-js"

  // Working with multiple clients in a single monorepo without overlaps
  // References:
  // - Issue https://github.com/prisma/prisma/issues/7470
  // - Repository: https://github.com/ionut-gheorghe/nx-multi-prisma

  // Remove comment from next line if you wich to change the output of the prisma client. You will also need to change the
  // imports of "PrismaClient" class in other files.

  output = "./generated/postgresql"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @db.Timestamptz(6)
  email      String   @unique
}

model plan_subscriptions {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  created_at DateTime @default(now()) @db.Timestamptz(6)
  updated_at DateTime @default(now()) @db.Timestamptz(6)
  email      String   @unique
  plan       String
  is_active  Boolean
}
